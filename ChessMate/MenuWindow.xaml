<Window x:Class="ChessMate.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Mate" Height="350" Width="525" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="White">
        <Label HorizontalAlignment="Center" FontSize="50" Content="♚ Chess Mate ♚" FontFamily="Arial Unicode MS"/>
        <Button Name="New" FontSize="35" Margin="50,10,50,0" >♕ New game ♕</Button>
        <Button Name="Load" FontSize="35" Margin="50,10,50,0">♜ Load game♜</Button>
        <Button Name="Exit" FontSize="35" Margin="50,10,50,0">♗   Exit   ♗</Button>
    </StackPanel>
</Window>
